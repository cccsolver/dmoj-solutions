#include <bits/stdc++.h>
using namespace std;
char a[10005];
int main() {
    int n, ans = 0;
    cin >> n;
    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }
    for (int i = 0; i < n; i++) {
        char x;
        cin >> x;
        if (x == a[i]) {
            ans++;
        }
    }
    cout << ans;
    return 0;
}
